<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             xmlns:tools="http://schemas.android.com/tools"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:layout_margin="4dp"

        app:cardCornerRadius="2dp"
        app:cardElevation="@dimen/card_elevation"
        app:cardBackgroundColor="@color/green_300"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"

                tools:text="GPU"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/load_total"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"

                    tools:text="23%"
                    android:textSize="48sp"
                    android:textColor="@color/white"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@+id/load_total"
                    android:paddingRight="16dp"
                    android:paddingTop="36dp"
                    android:paddingBottom="16dp"
                    >

                    <LinearLayout
                        android:id="@+id/clocks"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/load_total"
                        android:gravity="center"
                        >

                        <LinearLayout
                            android:id="@+id/core_clock"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="start|center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="@string/core"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"

                                android:textAllCaps="true"
                                />

                            <TextView
                                android:id="@+id/core_clock_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"

                                tools:text="300 Mhz"
                                android:textColor="@color/white"
                                android:fontFamily="monospace"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/memory_clock"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="start|center_vertical"
                            android:layout_below="@+id/core_clock"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="@string/memory"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"

                                android:textAllCaps="true"
                                />

                            <TextView
                                android:id="@+id/memory_clock_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"

                                tools:text="400 Mhz"
                                android:textColor="@color/white"
                                android:fontFamily="monospace"
                                />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        >

                        <LinearLayout
                            android:id="@+id/gpu_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="start|center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="@string/temperature"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"

                                android:textAllCaps="true"
                                />

                            <TextView
                                android:id="@+id/temperature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"

                                tools:text="45 Â°C"
                                android:textColor="@color/white"
                                android:fontFamily="monospace"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/fans"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_below="@+id/core_clock"
                            android:gravity="start|center_vertical"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="@string/fan_speed"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"

                                android:textAllCaps="true"
                                />

                            <TextView
                                android:id="@+id/fan_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"

                                tools:text="1280 RPM"
                                android:textColor="@color/white"
                                android:fontFamily="monospace"
                                />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>